<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="hugra.dotsnboxes.TestPlayerCardFrag">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#a9aacd">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/PlaerCardFrag_UserNameTextView"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/PlayerCardFrag_GameCountTextView"
            android:layout_below="@+id/PlaerCardFrag_UserNameTextView"
            android:layout_alignStart="@+id/PlaerCardFrag_UserNameTextView"
            android:layout_marginBottom="5dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/PlayerCardFrag_ProfileButton"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/PlaerCardFrag_UserNameTextView"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/PlayerCardFrag_ChallengeButton"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/PlayerCardFrag_ProfileButton"
            />
    </RelativeLayout>
</FrameLayout>
